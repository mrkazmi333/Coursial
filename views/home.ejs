<div id="home-container">
    <section id = "feed-posts">
        <h4 id="posts-section-heading">Posts</h4>
        <% if(locals.user) { %>
            <form action="/posts/create" id="new-post-form" method="POST">
                <textarea id="post-text-area" name="content" id="" cols="30" rows="3" placeholder="Type here..." required></textarea>
                <input id="post-submit-button" type="submit" value="Post">
            </form>
        <% } %>
    
        <div id="posts-list-container">
            <ul>
                <% for(post of posts) { %>
                    <%- include('_post') -%>
                <% } %>
            </ul>
        </div>
    </section>
    
    <section id="user-friends">
        <h4 id="friends-section-heading">Friends</h4>
        <% for(u of all_users) { %>
            <h4 class="user-name-headings">
                <a href="/users/profile/<%= u.id %>"><%= u.name %></a>
            </h4>
        <% } %>
    </section>

</div>

<script src="/js/home_post_comments.js"></script>
<script src="/js/home_posts.js"></script>
