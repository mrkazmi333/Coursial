<li class="comment-list" id="comment-<%= comment._id %>">
    <p>
        
        <h4 class="comment-user-name">
            <%= comment.user.name %>
        </h4>
        
       <p class="comment-content"> <%= comment.content %> </p> 

       <% if(locals.user && locals.user.id == comment.user.id) { %>
        <small>
            <a class="delete-comment delete-comment-button" href="/comments/destroy/<%= comment.id %>">Delete Comment</a>
        </small>
        <% } %>
    
    </p>
</li>
